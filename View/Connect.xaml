<Window x:Class="FlightSimulatorApp.View.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp.View"
        mc:Ignorable="d"
        Title="Connect" Height="125" Width="270">
    <Grid Background="White">
        <Label Content="Ip:" HorizontalAlignment="Left" Margin="7,5,0,0" VerticalAlignment="Top"/>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="7,34,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ip" HorizontalAlignment="Left" Height="23" Margin="45,8,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="120" SelectionBrush="#FFABADB3" BorderBrush="#FF9FEDDC"/>
        <TextBox x:Name="port" HorizontalAlignment="Left" Height="23" Margin="45,36,0,0" TextWrapping="Wrap"  Text="5402" VerticalAlignment="Top" Width="120" SelectionBrush="#FFABADB3" BorderBrush="#FF9FEDDC"/>
        <Button Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="66" Height="30" BorderBrush="{x:Null}" Foreground="Black" Background="#FF9FEDDC" Margin="181,56,0,0" Click="Button_Click"/>

    </Grid>
</Window>
